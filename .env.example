# Kalshi Research Platform - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# KALSHI API CREDENTIALS (OPTIONAL - only needed for authenticated endpoints)
# ============================================================================
#
# Public endpoints (markets, events, trades, orderbook) work WITHOUT credentials.
# Only needed if you want to access:
#   - /portfolio/balance
#   - /portfolio/positions
#   - /portfolio/orders
#
# Get API keys at: https://kalshi.com/api
#
# IMPORTANT: For CI/CD, base64 encode your private key content:
#   base64 -i your_key.pem | tr -d '\n'

# Your Kalshi API key ID (leave empty for public-only access)
KALSHI_KEY_ID=

# Path to your RSA private key PEM file (for local development)
# Example: /path/to/kalshi_private_key.pem
KALSHI_PRIVATE_KEY_PATH=

# Base64-encoded private key content (for CI/CD - avoids file path issues)
# KALSHI_PRIVATE_KEY_B64=

# Environment: "demo" or "prod"
# Demo: https://demo-api.kalshi.co (paper trading, no real money)
# Prod: https://api.elections.kalshi.com (real trading)
KALSHI_ENVIRONMENT=demo

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# SQLite database path (default: data/kalshi.db)
DATABASE_URL=sqlite+aiosqlite:///data/kalshi.db

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Structured logging format: json or console
LOG_FORMAT=console

# ============================================================================
# DATA COLLECTION
# ============================================================================

# Price snapshot interval in minutes (default: 15)
SNAPSHOT_INTERVAL_MINUTES=15

# Market sync interval in hours (default: 1)
MARKET_SYNC_INTERVAL_HOURS=1

# ============================================================================
# RESEARCH SETTINGS
# ============================================================================

# Minimum volume for market scanner (contracts)
MIN_SCANNER_VOLUME=100

# Minimum liquidity for market scanner (dollars)
MIN_SCANNER_LIQUIDITY=1000

# Edge detection threshold (percentage points, e.g., 5 = 5%)
EDGE_THRESHOLD_PCT=5
